{
  "private": true,
  "name": "spa-template",
  "description": "基于 React 技术栈的单页应用开发模板",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "scripts": {
    "start": "npm run build && serve -s build",
    "dev": "cross-env NODE_PATH=src react-scripts start",
    "build": "cross-env NODE_PATH=src react-scripts build",
    "test": "cross-env NODE_PATH=src react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext=.js,.jsx --fix",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "prepush": "npm run lint"
  },
  "dependencies": {
    "@rematch/core": "^1.0.0-beta.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@uedlinker/commitlint-config": "^1.0.1",
    "@uedlinker/eslint-config-base": "^1.0.0",
    "@uedlinker/eslint-config-react": "^1.0.0",
    "babel-eslint": "^8.2.6",
    "cross-env": "^5.2.0",
    "eslint": "4.15.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "react-scripts": "^2.0.0-next.3e165448",
    "serve": "^9.3.0"
  },
  "eslintConfig": {
    "extends": "@uedlinker/eslint-config-react"
  },
  "eslintIgnore": [
    "build",
    "node_modules"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": "@uedlinker/commitlint-config"
  },
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">0.25%",
      "not op_mini all",
      "ie 11"
    ]
  }
}
