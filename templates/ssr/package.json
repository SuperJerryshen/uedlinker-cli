{
  "private": true,
  "name": "ssr-template",
  "version": "0.1.0",
  "description": "基于 React 技术栈的服务器渲染开发模板",
  "license": "UNLICENSED",
  "main": "server/index.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node server/index.js",
    "dev": "node server/index.js",
    "build": "next build client",
    "lint": "eslint client server ./next.config.js --ext '.js,.jsx'",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "prepush": "npm run lint"
  },
  "dependencies": {
    "@zeit/next-sass": "^0.2.0",
    "cross-env": "^5.2.0",
    "koa": "^2.5.1",
    "koa-router": "^7.4.0",
    "next": "^6.1.1",
    "node-sass": "^4.9.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@uedlinker/commitlint-config": "^1.0.0",
    "babel-eslint": "^8.2.5",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3"
  },
  "commitlint": {
    "extends": [
      "@uedlinker/commitlint-config"
    ]
  }
}
